<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.Dark" parent="BaseTheme.Dark">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Black" parent="BaseTheme.Black">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="BaseTheme.Toolbar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="Widget.MorphButton" parent="Widget.AppCompat.Button.Small">
        <item name="vc_startDrawable">@null</item>
        <item name="vc_endDrawable">@null</item>
        <item name="vc_autoStartAnimation">false</item>
    </style>

    <style name="BaseTheme.Settings" parent="BaseTheme.BaseThemeSettings">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BaseTheme.Settings.Dark" parent="BaseTheme.BaseThemeSettings.Dark">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BaseTheme.Settings.Black" parent="BaseTheme.BaseThemeSettings.Black">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BaseTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/background_dialog</item>
        <item name="background">@color/background</item>
    </style>

    <style name="BaseTheme.Dialog.Dark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/background_dialog_dark</item>
        <item name="background">@color/background_dark</item>
    </style>
</resources>